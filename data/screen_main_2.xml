<?xml version="1.0" encoding="UTF-8"?>
<screen name="main_2" width="320" height="480" background="#1a1a1a">
    <!-- Header Section -->
    <container name="header" x="0" y="0" width="320" height="60" background="#2a2a2a">
        <label name="title" x="10" y="20" text="Performance" font="montserrat_16" color="#ffffff"/>
        <label name="mode" x="220" y="20" text="SPORT" font="montserrat_14" color="#ff0000"/>
    </container>
    
    <!-- Main Content Area -->
    <container name="content" x="0" y="60" width="320" height="360">
        <!-- Performance Metrics -->
        <container name="performance" x="20" y="20" width="280" height="160">
            <!-- 0-100 Timer -->
            <label name="accel_label" x="0" y="0" text="0-100 km/h" font="montserrat_14" color="#aaaaaa"/>
            <label name="accel_time" x="0" y="25" text="--.-s" font="montserrat_28" color="#ff0000"/>
            
            <!-- Max Speed -->
            <label name="max_speed_label" x="160" y="0" text="Max Speed" font="montserrat_14" color="#aaaaaa"/>
            <label name="max_speed_value" x="160" y="25" text="--- km/h" font="montserrat_20" color="#00ff00"/>
            
            <!-- G-Force Display -->
            <container name="g_force" x="60" y="80" width="80" height="80" background="#333333" radius="40">
                <circle name="g_indicator" x="35" y="35" width="10" height="10" color="#ff0000"/>
                <label name="g_value" x="20" y="90" text="0.0g" font="montserrat_12" color="#ffffff" align="center"/>
            </container>
            
            <!-- Lap Timer -->
            <label name="lap_label" x="0" y="120" text="Lap Time:" font="montserrat_14" color="#aaaaaa"/>
            <label name="lap_time" x="80" y="120" text="00:00.000" font="montserrat_16" color="#ffffff"/>
            <button name="lap_button" x="200" y="115" width="60" height="25" text="LAP" font="montserrat_12"/>
        </container>
        
        <!-- Real-time Charts -->
        <container name="charts" x="20" y="200" width="280" height="140">
            <label name="chart_title" x="0" y="0" text="Power & Torque" font="montserrat_14" color="#ffffff"/>
            
            <!-- Power Chart -->
            <chart name="power_chart" x="0" y="25" width="135" height="80" 
                   bg_color="#222222" line_color="#ff0000" grid_color="#444444"/>
            <label name="power_label" x="40" y="110" text="Power (HP)" font="montserrat_10" color="#aaaaaa"/>
            
            <!-- Torque Chart -->
            <chart name="torque_chart" x="145" y="25" width="135" height="80" 
                   bg_color="#222222" line_color="#0099ff" grid_color="#444444"/>
            <label name="torque_label" x="180" y="110" text="Torque (Nm)" font="montserrat_10" color="#aaaaaa"/>
        </container>
    </container>
    
    <!-- Navigation Hints -->
    <container name="nav_hints" x="0" y="420" width="320" height="60" background="#333333">
        <label name="left_hint" x="10" y="20" text="◀ Prev" font="montserrat_12" color="#888888"/>
        <label name="right_hint" x="260" y="20" text="Next ▶" font="montserrat_12" color="#888888"/>
        <label name="up_hint" x="130" y="5" text="▲ Settings" font="montserrat_10" color="#888888"/>
    </container>
</screen>