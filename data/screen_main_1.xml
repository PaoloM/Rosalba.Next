<?xml version="1.0" encoding="UTF-8"?>
<screen name="main_1" width="320" height="480" background="#1a1a1a">
    <!-- Header Section -->
    <container name="header" x="0" y="0" width="320" height="60" background="#2a2a2a">
        <label name="title" x="10" y="20" text="Dashboard" font="montserrat_16" color="#ffffff"/>
        <label name="time" x="250" y="20" text="12:34" font="montserrat_16" color="#00ff00"/>
    </container>
    
    <!-- Main Content Area -->
    <container name="content" x="0" y="60" width="320" height="360">
        <!-- Speed Gauge -->
        <arc name="speed_gauge" x="50" y="30" width="120" height="120" 
             start_angle="135" end_angle="45" bg_color="#333333" 
             indicator_color="#ff0000" thickness="8"/>
        <label name="speed_value" x="85" y="85" text="0" font="montserrat_24" color="#ffffff" align="center"/>
        <label name="speed_unit" x="85" y="110" text="km/h" font="montserrat_12" color="#aaaaaa" align="center"/>
        
        <!-- RPM Gauge -->
        <arc name="rpm_gauge" x="200" y="30" width="100" height="100" 
             start_angle="135" end_angle="45" bg_color="#333333" 
             indicator_color="#00ff00" thickness="6"/>
        <label name="rpm_value" x="225" y="75" text="0" font="montserrat_16" color="#ffffff" align="center"/>
        <label name="rpm_unit" x="225" y="95" text="RPM" font="montserrat_10" color="#aaaaaa" align="center"/>
        
        <!-- Status Indicators -->
        <container name="status" x="20" y="180" width="280" height="100">
            <label name="gear_label" x="0" y="0" text="Gear:" font="montserrat_14" color="#aaaaaa"/>
            <label name="gear_value" x="50" y="0" text="N" font="montserrat_18" color="#ffffff"/>
            
            <label name="temp_label" x="120" y="0" text="Temp:" font="montserrat_14" color="#aaaaaa"/>
            <label name="temp_value" x="170" y="0" text="90°C" font="montserrat_16" color="#00ff00"/>
            
            <label name="fuel_label" x="0" y="30" text="Fuel:" font="montserrat_14" color="#aaaaaa"/>
            <progressbar name="fuel_bar" x="50" y="35" width="200" height="10" 
                        bg_color="#333333" indicator_color="#0099ff" value="75"/>
            
            <label name="boost_label" x="0" y="60" text="Boost:" font="montserrat_14" color="#aaaaaa"/>
            <label name="boost_value" x="60" y="60" text="0.5 bar" font="montserrat_16" color="#ffaa00"/>
        </container>
    </container>
    
    <!-- Navigation Hints -->
    <container name="nav_hints" x="0" y="420" width="320" height="60" background="#333333">
        <label name="left_hint" x="10" y="20" text="◀ Prev" font="montserrat_12" color="#888888"/>
        <label name="right_hint" x="260" y="20" text="Next ▶" font="montserrat_12" color="#888888"/>
        <label name="up_hint" x="130" y="5" text="▲ Settings" font="montserrat_10" color="#888888"/>
    </container>
</screen>