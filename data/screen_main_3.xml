<?xml version="1.0" encoding="UTF-8"?>
<screen name="main_3" width="320" height="480" background="#1a1a1a">
    <!-- Header Section -->
    <container name="header" x="0" y="0" width="320" height="60" background="#2a2a2a">
        <label name="title" x="10" y="20" text="Navigation" font="montserrat_16" color="#ffffff"/>
        <label name="compass" x="250" y="20" text="N" font="montserrat_16" color="#00ff00"/>
    </container>
    
    <!-- Main Content Area -->
    <container name="content" x="0" y="60" width="320" height="360">
        <!-- Map Area (Placeholder) -->
        <container name="map_area" x="20" y="20" width="280" height="200" background="#333333" radius="5">
            <label name="map_placeholder" x="90" y="90" text="MAP VIEW" font="montserrat_16" color="#666666" align="center"/>
            <!-- GPS Coordinates -->
            <label name="gps_lat" x="10" y="10" text="Lat: 45.0642°N" font="montserrat_10" color="#aaaaaa"/>
            <label name="gps_lon" x="10" y="25" text="Lon: 7.6957°E" font="montserrat_10" color="#aaaaaa"/>
            <!-- Current Speed -->
            <label name="current_speed" x="200" y="160" text="65 km/h" font="montserrat_18" color="#00ff00"/>
            <label name="speed_limit" x="200" y="180" text="Limit: 70" font="montserrat_10" color="#ffaa00"/>
        </container>
        
        <!-- Navigation Info -->
        <container name="nav_info" x="20" y="240" width="280" height="100">
            <!-- Distance to destination -->
            <label name="distance_label" x="0" y="0" text="Distance:" font="montserrat_14" color="#aaaaaa"/>
            <label name="distance_value" x="80" y="0" text="12.5 km" font="montserrat_16" color="#ffffff"/>
            
            <!-- ETA -->
            <label name="eta_label" x="180" y="0" text="ETA:" font="montserrat_14" color="#aaaaaa"/>
            <label name="eta_value" x="220" y="0" text="15:45" font="montserrat_16" color="#ffffff"/>
            
            <!-- Next Turn -->
            <container name="next_turn" x="0" y="35" width="280" height="40" background="#444444" radius="5">
                <label name="turn_icon" x="10" y="10" text="➡" font="montserrat_20" color="#ffaa00"/>
                <label name="turn_distance" x="50" y="5" text="In 800m" font="montserrat_12" color="#aaaaaa"/>
                <label name="turn_instruction" x="50" y="20" text="Turn right onto Via Roma" font="montserrat_14" color="#ffffff"/>
            </container>
        </container>
    </container>
    
    <!-- Navigation Hints -->
    <container name="nav_hints" x="0" y="420" width="320" height="60" background="#333333">
        <label name="left_hint" x="10" y="20" text="◀ Prev" font="montserrat_12" color="#888888"/>
        <label name="right_hint" x="260" y="20" text="Next ▶" font="montserrat_12" color="#888888"/>
        <label name="up_hint" x="130" y="5" text="▲ Settings" font="montserrat_10" color="#888888"/>
    </container>
</screen>