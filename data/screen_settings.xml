<?xml version="1.0" encoding="UTF-8"?>
<screen name="settings" width="320" height="480" background="#2a2a2a">
    <!-- Header Section -->
    <container name="header" x="0" y="0" width="320" height="60" background="#333333">
        <label name="title" x="10" y="20" text="Settings" font="montserrat_18" color="#ffffff"/>
        <button name="close_btn" x="270" y="15" width="40" height="30" text="✕" font="montserrat_16" color="#ff0000"/>
    </container>
    
    <!-- Settings Content -->
    <container name="content" x="0" y="60" width="320" height="420">
        <!-- Display Settings -->
        <container name="display_section" x="20" y="20" width="280" height="120">
            <label name="display_title" x="0" y="0" text="Display" font="montserrat_16" color="#ffffff"/>
            
            <!-- Brightness -->
            <label name="brightness_label" x="0" y="30" text="Brightness" font="montserrat_14" color="#aaaaaa"/>
            <slider name="brightness_slider" x="100" y="35" width="150" height="20" 
                    bg_color="#444444" indicator_color="#0099ff" knob_color="#ffffff" value="75"/>
            
            <!-- Theme -->
            <label name="theme_label" x="0" y="65" text="Theme" font="montserrat_14" color="#aaaaaa"/>
            <dropdown name="theme_dropdown" x="100" y="60" width="120" height="30" 
                     bg_color="#444444" text_color="#ffffff" selected="Dark"/>
        </container>
        
        <!-- Units Settings -->
        <container name="units_section" x="20" y="160" width="280" height="100">
            <label name="units_title" x="0" y="0" text="Units" font="montserrat_16" color="#ffffff"/>
            
            <!-- Speed Units -->
            <label name="speed_unit_label" x="0" y="30" text="Speed" font="montserrat_14" color="#aaaaaa"/>
            <switch name="speed_unit_switch" x="200" y="30" width="50" height="25" 
                    bg_color="#444444" indicator_color="#0099ff" checked="true"/>
            <label name="speed_unit_text" x="100" y="35" text="km/h" font="montserrat_12" color="#888888"/>
            
            <!-- Temperature Units -->
            <label name="temp_unit_label" x="0" y="65" text="Temperature" font="montserrat_14" color="#aaaaaa"/>
            <switch name="temp_unit_switch" x="200" y="65" width="50" height="25" 
                    bg_color="#444444" indicator_color="#0099ff" checked="true"/>
            <label name="temp_unit_text" x="130" y="70" text="°C" font="montserrat_12" color="#888888"/>
        </container>
        
        <!-- Performance Settings -->
        <container name="performance_section" x="20" y="280" width="280" height="80">
            <label name="performance_title" x="0" y="0" text="Performance" font="montserrat_16" color="#ffffff"/>
            
            <!-- Sport Mode -->
            <label name="sport_mode_label" x="0" y="30" text="Sport Mode" font="montserrat_14" color="#aaaaaa"/>
            <switch name="sport_mode_switch" x="200" y="30" width="50" height="25" 
                    bg_color="#444444" indicator_color="#ff0000" checked="false"/>
        </container>
        
        <!-- System Info -->
        <container name="system_section" x="20" y="380" width="280" height="60">
            <label name="system_title" x="0" y="0" text="System" font="montserrat_16" color="#ffffff"/>
            <label name="version_info" x="0" y="25" text="Version: 1.0.0" font="montserrat_12" color="#888888"/>
            <label name="memory_info" x="120" y="25" text="Free RAM: 64KB" font="montserrat_12" color="#888888"/>
        </container>
    </container>
</screen>